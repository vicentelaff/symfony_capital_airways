{% extends 'base.html.twig' %}

{% block title %}Flight
{% endblock %}

{% block body %}
	<div class="container col-10">
		<h1>Flight</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ flight.id }}</td>
				</tr>
				<tr>
					<th>FlightSchedule</th>
					<td>{{ flight.flightSchedule ? flight.flightSchedule|date('H:i:s') : '' }}</td>
				</tr>
				<tr>
					{% if flight.discount %}
						<th class="pricepromo">Price -10%</th>
						<td class="pricepromo">{{ flight.flightPrice*0.9 }}â‚¬</td>
					{% else %}
						<th>FlightPrice</th>
						<td>{{ flight.flightPrice }}</td>
					{% endif %}
				</tr>
			</tbody>
		</tr>
		<tr>
			<th>Discount</th>
			<td>{{ flight.discount ? 'Yes' : 'No' }}</td>
		</tr>
		<tr>
			<th>FlightNumber</th>
			<td>{{ flight.flightNumber }}</td>
		</tr>
		<tr>
			<th>Places</th>
			<td>{{ flight.places }}</td>
		</tr>
	</tbody>
</table>
<a class="btn btn-outline-primary text-uppercase" href="{{ path('flight_index') }}">back to list</a>
