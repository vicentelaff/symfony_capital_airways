{% extends 'base.html.twig' %}

{% block title %}Flight{% endblock %}

{% block body %}
    <h1>Flight</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ flight.id }}</td>
            </tr>
            <tr>
                <th>FlightSchedule</th>
                <td>{{ flight.flightSchedule ? flight.flightSchedule|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FlightPrice</th>
                <td>{{ flight.flightPrice }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ flight.discount ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>FlightNumber</th>
                <td>{{ flight.flightNumber }}</td>
            </tr>
            <tr>
                <th>Places</th>
                <td>{{ flight.places }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('flight_index') }}">back to list</a>

    <a href="{{ path('flight_edit', {'id': flight.id}) }}">edit</a>

    {{ include('flight/_delete_form.html.twig') }}
{% endblock %}
